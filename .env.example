# Database
# PostgreSQL connection string with pgvector support
# Get one from: https://neon.tech, https://supabase.com, or https://railway.app
DATABASE_URL="postgresql://user:password@host:5432/database"

# Clerk Authentication
# Get your keys from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
CLERK_WEBHOOK_SECRET="whsec_..."

# TanStack Electric (Real-time sync)
# Get credentials from: https://electric-sql.com
ELECTRIC_SOURCE_ID="your_source_id"
ELECTRIC_SECRET="your_secret"

# Upstash Vector (Vector storage)
# Get credentials from: https://console.upstash.com/vector
# Note: You'll need to create a vector index per deployment
UPSTASH_MANAGEMENT_API_KEY="your_management_api_key"

# Upstash Redis (Caching)
# Get credentials from: https://console.upstash.com/redis
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_redis_token"

# OpenAI (Embeddings)
# Get your API key from: https://platform.openai.com/api-keys
# Used for generating text-embedding-3-small embeddings
OPENAI_API_KEY="sk-..."

# Trigger.dev (Background jobs)
# Get your secret key from: https://cloud.trigger.dev
TRIGGER_SECRET_KEY="tr_dev_..."

# Vercel Blob (File storage)
# Get your token from: https://vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN="vercel_blob_..."

# LlamaParse (Document parsing)
# Get your API key from: https://cloud.llamaindex.ai
# Supports PDF, DOCX, XLSX, PPTX, CSV, HTML, and more
LLAMA_CLOUD_API_KEY="llx-..."

# Firecrawl (Web scraping - optional)
# Get your API key from: https://firecrawl.dev
FIRECRAWL_API_KEY="fc-..."

# Tinybird (Analytics - optional)
# Get your token from: https://www.tinybird.co
# If not provided, analytics will be disabled
TINYBIRD_TOKEN="p...."

# Encryption (Required)
# Generate a secure random string for encrypting sensitive data
# Example: openssl rand -base64 32
ENCRYPTION_SECRET="your_secure_random_string"

# Application URL (Optional)
# Used for webhooks and redirects
NEXT_PUBLIC_URL="http://localhost:3000"
