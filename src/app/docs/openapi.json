  "paths": {
    "/deployments": {
      "post": {
        "operationId": "post-deployments",
        "summary": "Create deployment",
        "description": "Create a new deployment record.",
        "tags": ["Deployments"],
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateDeploymentBodySchema"
