          "params": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            },
            "nullable": true
          }
        }
      },
      "ErrorResponseSchema": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "enum": [false]
          },
          "error": {
            "type": "string"
          }
        },
        "required": ["success", "error"]
      },
      "BulkDocumentItemSchema": {
        "type": "object",
        "properties": {
          "folder": {
            "type": "string",
            "default": "/"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "url": {
            "type": "string",
            "minLength": 1
          },
          "refresh_frequency": {
            "type": "string",
            "enum": ["daily", "weekly", "monthly", "none"],
            "default": "none"
          },
          "enhance": {
            "type": "boolean",
            "default": false
          }
        },
        "required": ["folder", "name", "url", "refresh_frequency", "enhance"]
      },
      "BulkCreateDocumentsRequestSchema": {
        "type": "object",
        "properties": {
          "project_id": {
            "type": "string",
            "minLength": 1
          },
          "documents": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/BulkDocumentItemSchema"
            },
            "minItems": 1,
            "maxItems": 50
          }
        },
        "required": ["project_id", "documents"]
      },
      "querySchema": {
        "type": "object",
        "properties": {
          "allSnapshots": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "MapRequestSchema": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "minLength": 1
          },
          "limit": {
            "type": "number",
            "nullable": true,
            "default": 50
          }
        },
        "required": ["url"]
      },
      "ProjectErrorResponseSchema": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
